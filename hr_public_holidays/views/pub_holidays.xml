<odoo>
    <data>
        <record id="view_pub_holidays_form" model="ir.ui.view">
            <field name="name">public.holidays.form</field>
            <field name="model">hr.public.holiday</field>
            <field name="arch" type="xml">
                <form string="Public holiday">
                    <header>
                        <button string="Approve" name="validate" states="draft" type="object"
                                class="oe_highlight"/>
                        <!--                        groups="base.group_hr_user" -->
                        <button string="Reset to Draft" name="reset" type="object"
                                attrs="{'invisible': [('state', 'not in', ['validate'])]}"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,validate"/>
                    </header>
                    <sheet>
                        <group>
                            <group name="Fêtes et jours fériés">
                                <field name="name" attrs="{'readonly':[('state','!=','draft')]}" required="1"
                                       string="Libellé"/>
                                <field name="date_from" required="1" attrs="{'readonly':[('state','!=','draft')]}"
                                       string="Date de"/>
                                <field name="date_to" attrs="{'readonly':[('state','!=','draft')]}"
                                       string="Date à" required="1"/>
                                <field name="nbr" string="Nbre Jrs"/>
                            </group>
                            <group>
                                <field name="company_id" groups="base.group_multi_company"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_pub_holidays_tree" model="ir.ui.view">
            <field name="name">public.holidays.tree</field>
            <field name="model">hr.public.holiday</field>
            <field name="arch" type="xml">
                <tree decoration-success="state == 'validate'" decoration-info="state == 'draft'"
                      string="Public Holidays">
                    <field name="name"/>
                    <field name="company_id" groups="base.group_multi_company"/>
                    <field name="date_from"/>
                    <field name="date_to"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record id="action_pub_holidays" model="ir.actions.act_window">
            <field name="name">Fêtes et jours fériés</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.public.holiday</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{}</field>
        </record>

        <menuitem id="menu_public_holiday" name="Fêtes et jours fériés" parent="project_custom.menu_gest_data_rh"
                  sequence="90" action="action_pub_holidays"/>

    </data>
</odoo>