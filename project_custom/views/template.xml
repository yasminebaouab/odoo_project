<odoo>
    <data>
        <record id="view_template_project_form" model="ir.ui.view">
            <field name="name">template.project.form</field>
            <field name="model">project.project</field>
            <field name="arch" type="xml">
                <form string="Projet" create="0" edit="0">
                    <header>
                        <button name="button_apply" string="Utiliser Template" type="object"
                                class="oe_highlight"/>
                    </header>
                    <group>
                        <group>
                            <field name="state" invisible="1"/>
                            <field name="is_template" invisible="1"/>
                            <field name="is_super_admin" string="Super Admin ?" invisible="1"/>
                            <field name="is_admin" string="Admin ?" invisible="1"/>
                            <newline/>
                            <field name="template_name"
                                   attrs="{'required':[('is_template', '=', True)]}"/>
                        </group>
                        <group>
                            <field name="note" string="Description"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Tâches Planifiées" name="project_stages">
                            <field name="task_ids"
                                   context="{'task_ids':task_ids, 'default_project_id':id}">
                                <tree name="Task" editable="bottom">
                                    <!--                                    decoration-bf="product_id[0] ==39 or False"-->
                                    <field name="is_super_admin" string="Super Admin ?" invisible="1"/>
                                    <field name="sequence" string="N°"/>
                                    <field name="step_id" string="Etape"
                                           options="{'no_create': True, 'no_create_edit':True}"/>
                                    <field name="name" string="Nom Etape"/>
                                    <field name="state" string="Statut" readonly="1" invisible="1"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </form>
            </field>
        </record>

        <record id="view_template_project_kanban" model="ir.ui.view">
            <field name="name">template.project.form</field>
            <field name="model">project.project</field>
            <field name="arch" type="xml">
                <kanban class="o_kanban_dashboard" create="0">
                    <field name="template_name"/>
                    <field name="note"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_content oe_kanban_global_click">

                                <div>
                                    <span class="o_text_overflow text-center" style="font-size: 18px;">
                                        <t t-esc="record.template_name.value"/>
                                    </span>
                                </div>

                                <div class="text-left">
                                    <field name="note"/>
                                </div>

                                <div>
                                    <button name="button_apply" string="Utiliser Template" type="object"
                                            class="oe_kanban_button_custom">
                                        Générer
                                    </button>
                                </div>

                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <record id="view_template_project_tree" model="ir.ui.view">
            <field name="name">template.project.tree</field>
            <field name="model">project.project</field>
            <field name="arch" type="xml">
                <tree string="Projects" create="0">
                    <field name="id" string="ID"/>
                    <field name="is_template" invisible="1"/>
                    <field name="state" invisible="1"/>
                    <field name="template_name"/>
                    <field name="note"/>
                </tree>
            </field>
        </record>

        <record id="action_project_template" model="ir.actions.act_window">
            <field name="name">Templates</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">project.project</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('is_template', '=', True), ('state', '=', 'open')]</field>
            <field name="context">{'default_is_template': True}</field>
            <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'kanban', 'view_id': ref('project_custom.view_template_project_kanban')}),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('project_custom.view_template_project_tree')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('project_custom.view_template_project_form')})]"/>
        </record>

    </data>
</odoo>