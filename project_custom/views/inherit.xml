<odoo>

    <record id="view_task_work_domain_inherit" model="ir.ui.view">
        <field name="name">task.work.domain.inherit</field>
        <field name="model">project.task.work</field>
        <field name="inherit_id" ref="task_work.view_task_work_search"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='pr_project_id']" position="attributes">
                <attribute name="domain">[('partner_id', '=', partner_id), ('parent_id1', '=', False)]</attribute>
            </xpath>
        </field>
    </record>

    <record id="view_product_step_inherit" model="ir.ui.view">
        <field name="name">product.step.inherit</field>
        <field name="model">product.step</field>
        <field name="inherit_id" ref="product_custom.view_step_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='inherit_step']" position="inside">
                <field name="project_ids" nolabel="1"
                       domain="[('is_parent', '=', False), ('is_template', '=', False), ('state', 'in',('open', 'draft'))]">
                    <tree>
                        <field name="id"/>
                        <field name="npc"/>
                        <field name="partner_id"/>
                        <field name="date_start"/>
                        <field name="date_end"/>
                        <field name="state"/>
                    </tree>
                </field>
                <newline/>
                <button name="button_add" type="object" string="Ajouter"
                        confirm="Confirmez-vous l'insertion ?" class="oe_highlight"/>
            </xpath>
        </field>
    </record>

</odoo>