    <record id="action_active_status_wizard" model="ir.actions.server">
        <field name="name">Changer Statuts</field>
        <field name="type">ir.actions.server</field>
        <field name="model_id" ref="task_work.model_project_task_work"/>
        <field name="binding_model_id" ref="task_work.model_project_task_work"/>
        <field name="binding_view_types">list</field>
        <field name="state">code</field>
        <field name="sequence" eval="50"/>
