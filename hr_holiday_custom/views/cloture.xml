<odoo>

    <record id="view_cloture_tree" model="ir.ui.view">
        <field name="name">hr.holidays.colture.tree</field>
        <field name="model">hr.holidays.cloture</field>
        <field name="arch" type="xml">
            <tree>
                <field name="date"/>
                <field name="type"/>
            </tree>
        </field>
    </record>

    <record id="view_cloture_form" model="ir.ui.view">
        <field name="name">hr.holidays.cloture.form</field>
        <field name="model">hr.holidays.cloture</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="button_valid" string="Clôturer" states="draft" type="object" class="oe_highlight"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,valid"/>
                </header>
                <sheet>
                    <group string="Donnés">
                        <group>
                            <field name="cn" force_save="1" invisible="1"/>
                            <field name="type"/>
                        </group>
                        <group>
                            <field name="date"/>
                        </group>
                    </group>
                    <group string="Paramètres">
                        <group>
                            <field name="employee_ids"
                                   attrs="{'invisible': [('type','!=', 'employee')]}">
                                <tree>
                                    <field name="id"/>
                                    <field name="name"/>
                                </tree>
                            </field>
                            <field name="year_cl"
                                   attrs="{'invisible': [('type','!=', 'year')], 'required': [('type', '=', 'year')]}"/>
                            <field name="line_ids" attrs="{'invisible': [('type','!=', 'year')]}">
                                <tree editable="bottom" delete="0">
                                    <field name="name" readonly="1"/>
                                    <field name="max_leave" readonly="1"/>
                                    <field name="avec_sol"/>
                                    <field name="sans_sol"/>
                                </tree>
                            </field>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_cloture_type" model="ir.actions.act_window">
        <field name="name">Clôture Exercice</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hr.holidays.cloture</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
    </record>

    <menuitem id="menu_holiday_cloture" name="Clôture Exercice" parent="project_custom.menu_gest_cong" sequence="40"
              action="action_cloture_type"/>

</odoo>