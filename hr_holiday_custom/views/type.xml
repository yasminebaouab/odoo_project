<odoo>

    <record id="view_holiday_type_tree" model="ir.ui.view">
        <field name="name">hr.holidays.type.tree</field>
        <field name="model">hr.holidays.type</field>
        <field name="arch" type="xml">
            <tree string="Leave Type" decoration-info="state == 'draft'">
                <field name="name"/>
                <field name="max_leave"/>
<!--                <field name="limit"/>-->
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="view_holiday_type_form" model="ir.ui.view">
        <field name="name">hr.holidays.type.form</field>
        <field name="model">hr.holidays.type</field>
        <field name="arch" type="xml">
            <form string="Leave Type">
                <sheet>
                    <header>
                        <button name="inject" type="object" string="Valider" attrs="{'invisible': [('state','=','valid')]}"
                                confirm="Validez-vous ce type de Congé ?" class="oe_highlight"/>
                        <button name="cancel" type="object" string="Annuler" attrs="{'invisible': [('state','=','draft')]}"
                                confirm="Supprimez-vous ce type de Congé ?" class="oe_highlight"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,valid"/>
                    </header>
                    <group string="Caractéristiques">
                        <group>
                            <field name="name"/>
<!--                            <field name="limit"/>-->
                        </group>
                        <group>
                            <field name="max_leave"/>
                            <field name="color_name"/>
                        </group>
                    </group>
                    <group string="Selection des Employées">
                        <group>
                            <field name="employee_ids">
                                <tree>
                                    <field name="id"/>
                                    <field name="name"/>
                                </tree>
                            </field>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_holiday_type" model="ir.actions.act_window">
        <field name="name">Type de Congés</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hr.holidays.type</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
    </record>

    <menuitem id="menu_holiday_type" name="Type de Congés" parent="project_custom.menu_gest_data_rh" sequence="30"
              action="action_holiday_type"/>

</odoo>