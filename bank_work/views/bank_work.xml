<odoo>
    <data>
        <record id="view_bank_work_form" model="ir.ui.view">
            <field name="name">bank.work.form</field>
            <field name="model">bank.work</field>
            <field name="arch" type="xml">
                <form string="Leave Request">
                    <header>
                        <button name="confirm" string="Confirmer" states="draft" type="object" class="oe_highlight"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,validate"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="create_date" string="Date" readonly="1"/>
                                <field name="employee_id" string="EmployÃ©" readonly="1"
                                       options="{'no_create': True, 'no_create_edit':True,'no_open':True}"/>
                                <field name="name" string="Ref F.T" readonly="1"
                                       options="{'no_create': True, 'no_create_edit':True,'no_open':True}"/>
                            </group>
                            <group>
                                <field name="wage" string="Total Heures" readonly="1"/>
                                <field name="amnt" string="Total F.T" readonly="1"/>
                                <field name="wage_ch" readonly="0" string="Nbre Heures"
                                       on_change="onchange_wage(wage_ch,employee_id)"/>
                                <field name="amnt_ch" string="Mtant Heures" readonly="1"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_bank_work_tree" model="ir.ui.view">
            <field name="name">bank.work.tree</field>
            <field name="model">bank.work</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="create_date" string="Date" readonly="1"/>
                    <field name="wage" string="Total Heures" readonly="1"/>
                    <field name="amnt" string="Total F.T" readonly="1"/>
                    <field name="wage_ch" readonly="0" string="Nbre Heures"/>
                    <field name="amnt_ch" string="Mtant Heures" readonly="0"/>
                    <field name="name" string="Ref F.T"/>
                    <field name="state" readonly="1"/>
                    <button name="confirm" string="Valider l'injection" type="object" icon="fa-light fa-check"
                            attrs="{'invisible': [('state','!=','draft')]}"/>
                </tree>
            </field>
        </record>

        <record id="action_bank_work" model="ir.actions.act_window">
            <field name="name">Banque d'heures</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">bank.work</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{}</field>
        </record>

        <menuitem id="menu_bank_work" name="Banque d'heures" parent="project_custom.menu_rh" sequence="40"
                  action="action_bank_work"/>

    </data>
</odoo>