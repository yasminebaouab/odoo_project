<odoo>

    <record id="view_sol_hours_tree" model="ir.ui.view">
        <field name="name">hr.sol.hours.tree</field>
        <field name="model">hr.employee</field>
        <field name="arch" type="xml">
            <tree create="0" delete="0">
                <field name="name" string="Nom Employé"/>
                <field name="bank_hours" string="Solde"/>
                <button name="action_convert" type="object" string="Convertir en Congé" class="oe_highlight"/>
            </tree>
        </field>
    </record>

    <record id="view_sol_hours_form" model="ir.ui.view">
        <field name="name">hr.sol.hours.form</field>
        <field name="model">hr.employee</field>
        <field name="arch" type="xml">
            <form create="0" delete="0">
                <header>
                    <button name="action_convert" type="object" string="Convertir en Congé" class="oe_highlight"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name" readonly="1" string="Nom Employé"/>
                        </group>
                        <group>
                            <field name="bank_hours" readonly="1" string="Solde"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_sol_hours_search" model="ir.ui.view">
        <field name="name">hr.sol.hours.search</field>
        <field name="model">hr.employee</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
            </search>
        </field>
    </record>


    <record id="action_sol_hours" model="ir.actions.act_window">
        <field name="name">Solde Banque d'Heures</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hr.employee</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
        <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('employee_custom.view_sol_hours_tree')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('employee_custom.view_sol_hours_form')})]"/>
    </record>

</odoo>