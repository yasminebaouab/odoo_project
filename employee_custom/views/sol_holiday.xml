<odoo>

    <record id="view_sol_holiday_tree" model="ir.ui.view">
        <field name="name">hr.sol.holidays.tree</field>
        <field name="model">hr.employee.holiday</field>
        <field name="arch" type="xml">
            <tree create="0">
                <field name="employee_id"/>
                <field name="name"/>
                <field name="max_leave"/>
                <field name="remaining_leave"/>
            </tree>
        </field>
    </record>

    <record id="view_sol_holiday_form" model="ir.ui.view">
        <field name="name">hr.sol.holidays.form</field>
        <field name="model">hr.employee.holiday</field>
        <field name="arch" type="xml">
            <form create="0">
                <sheet>
                    <group>
                        <group>
                            <field name="employee_id" readonly="1"/>
                            <field name="name" readonly="1"/>
                        </group>
                        <group>
                            <field name="max_leave" readonly="1"/>
                            <field name="remaining_leave" readonly="1"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_sol_holiday_search" model="ir.ui.view">
        <field name="name">hr.sol.holidays.search</field>
        <field name="model">hr.employee.holiday</field>
        <field name="arch" type="xml">
            <search>
                <field name="employee_id"/>
                <group expand="0" string="Group By">
                    <filter name="group_by_employee" string="Employé" context="{'group_by':'employee_id'}"/>
                </group>
            </search>
        </field>
    </record>


    <record id="action_sol_holiday" model="ir.actions.act_window">
        <field name="name">Solde Employés</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hr.employee.holiday</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_group_by_employee': 1}</field>
    </record>

</odoo>