<odoo>
    <data>
        <record id="view_holiday_year_form" model="ir.ui.view">
            <field name="name">training.holiday.year.form</field>
            <field name="model">training.holiday.year</field>
            <field name="arch" type="xml">
                <form string="Holiday Year" version="7.0">
                    <sheet>
                        <group>
                            <group>
                                <field name="year"/>
                            </group>
                            <group>
                                <field name="hours" string="Nbre Hrs/Jr"/>
                            </group>
                        </group>
                        <group>
                            <separator string="Periods" colspan="4"/>
                            <field name="period_ids" colspan="4" nolabel="1">
                                <tree string="Periods">
                                    <field name="name"/>
                                    <field name="date_start"/>
                                    <field name="date_stop"/>
                                    <field name="categ"/>
                                </tree>
                            </field>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_holiday_year_tree" model="ir.ui.view">
            <field name="name">training.holiday.year.tree</field>
            <field name="model">training.holiday.year</field>
            <field name="arch" type="xml">
                <tree string="Holiday Years">
                    <field name="year" string="Année"/>
                    <field name="hours" string="Nbre Hrs/Jr"/>
                </tree>
            </field>
        </record>

        <record id="action_holiday_year" model="ir.actions.act_window">
            <field name="name">Liste des Années</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">training.holiday.year</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{}</field>
        </record>

        <menuitem id="menu_year_list" name="Liste des Années" parent="project_custom.menu_gest_weekend"
                  action="action_holiday_year" sequence="0"/>

    </data>
</odoo>