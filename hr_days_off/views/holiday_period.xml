<odoo>
    <data>
        <record id="view_holiday_period_form" model="ir.ui.view">
            <field name="name">training.holiday.period.form</field>
            <field name="model">training.holiday.period</field>
            <field name="arch" type="xml">
                <form string="Holiday Period" version="7.0">
                    <sheet>
                        <group>
                            <group>
                                <field name="name" string="Désignation"/>
                                <field name="categ" string="Type de Congé/Jours Ferriés" widget="selection"/>
                                <field name="year_id" widget="selection"/>
                            </group>
                            <group>
                                <field name="date_start" string="Date Début"/>
                                <field name="date_stop" string="Date Fin"/>
                                <field name="active" string="Actif?"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_holiday_period_tree" model="ir.ui.view">
            <field name="name">training.holiday.period.tree</field>
            <field name="model">training.holiday.period</field>
            <field name="arch" type="xml">
                <tree string="Holiday Periods">
                    <field name="year_id" string="Année"/>
                    <field name="name" string="Nom"/>
                    <field name="date_start" string="Date de début"/>
                    <field name="date_stop" string="Date de fin"/>
                    <field name="active" string="Actif"/>
                    <field name="categ" string="Catégorie"/>
                </tree>
            </field>
        </record>

        <record id="action_holiday_period" model="ir.actions.act_window">
            <field name="name">Liste des Jrs Ferriés et Congés</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">training.holiday.period</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{}</field>
        </record>

        <menuitem id="menu_holiday_list" name="Liste des Jrs fériés et Congés" sequence="20"
                  parent="project_custom.menu_gest_weekend" action="action_holiday_period"/>

    </data>
</odoo>