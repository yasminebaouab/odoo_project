<odoo>

    <record id="view_holiday_histo_tree" model="ir.ui.view">
        <field name="name">hr.holidays.histo.tree</field>
        <field name="model">hr.holidays.histo</field>
        <field name="arch" type="xml">
            <tree string="Leave Type" delete="0" duplicate="0">
                <field name="employee_id"/>
                <field name="year"/>
                <field name="date"/>
                <field name="type"/>
                <field name="motif"/>
                <field name="diff"/>
            </tree>
        </field>
    </record>

    <record id="view_holiday_histo_form" model="ir.ui.view">
        <field name="name">hr.holidays.histo.form</field>
        <field name="model">hr.holidays.histo</field>
        <field name="arch" type="xml">
            <form edit="0" delete="0" duplicate="0">
                <sheet>
                    <group string="Date">
                        <group>
                            <field name="date" required="1"/>
                        </group>
                        <group>
                            <field name="year" required="1"/>
                        </group>
                    </group>
                    <group string="Données">
                        <group>
                            <field name="employee_id" required="1"
                                   options="{'no_create': True, 'no_create_edit':True,'no_open':True}"/>
                            <field name="type" required="1"
                                   options="{'no_create': True, 'no_create_edit':True,'no_open':True}"/>
                        </group>
                        <group>
                            <field name="sol" readonly="1" force_save="1"/>
                            <field name="diff" required="1"/>
                        </group>
                    </group>
                    <group string="Motif">
                        <field name="motif" nolabel="1" colspan="4" placeholder="Obligatoire" required="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>


    <record id="view_holiday_histo_search" model="ir.ui.view">
        <field name="name">hr.holidays.histo.search</field>
        <field name="model">hr.holidays.histo</field>
        <field name="arch" type="xml">
            <search>
                <field name="employee_id"/>
                <group expand="0" string="Group By">
                    <filter name="group_by_employee" string="Employé" context="{'group_by':'employee_id'}"/>
                </group>
            </search>
        </field>
    </record>


    <record id="action_holiday_histo" model="ir.actions.act_window">
        <field name="name">Historique Opérations</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hr.holidays.histo</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_group_by_employee': 1}</field>
    </record>

    <menuitem id="menu_holiday_histo" name="Historique Opérations" parent="project_custom.menu_gest_cong" sequence="20"
              action="action_holiday_histo"/>

</odoo>