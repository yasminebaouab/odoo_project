<odoo>

    <record id="view_holidays_tree" model="ir.ui.view">
        <field name="name">hr.holidays.tree</field>
        <field name="model">hr.holidays</field>
        <field name="arch" type="xml">
            <tree decoration-info="state == 'draft'" decoration-danger="state == 'refuse'"
                  decoration-success="state == 'accept'"
                  string="Allocation Requests" create="0">
                <field name="date" string="Date"/>
                <field name="employee_id" string="Employé"/>
                <field name="manager_id" string="Superviseur"/>
                <field name="holiday_type_id" string="Type de Congé"/>
                <field name="date_from" invisible="0" string="Date de Début"/>
                <field name="date_to" invisible="0" string="Date de Fin"/>
                <field name="number_of_days"/>
                <field name="state" string="État"/>
            </tree>
        </field>
    </record>

    <record id="view_holidays_form" model="ir.ui.view">
        <field name="name">hr.holidays.form</field>
        <field name="model">hr.holidays</field>
        <field name="arch" type="xml">
            <form string="Leave Request" create="0" edit="0">
                <header>
                    <field name="state" widget="statusbar" statusbar_visible="accept,refuse"/>
                </header>
                <sheet>
                    <group string="Données">
                        <group>
                            <field name="date" string="Date" readonly="1"/>
                            <field name="employee_id"/>
                            <field name="manager_id" domain="[('is_super','=',True)]"
                                   options="{'no_create': True, 'no_create_edit':True,'no_open':True}"/>
                            <field name="holiday_type_id"
                                   options="{'no_create': True, 'no_create_edit':True,'no_open':True}"/>
                        </group>
                        <group>
                            <field name="date_from"/>
                            <field name="date_to"/>
                            <field name="number_of_days"/>
                        </group>
                    </group>
                    <group string="Justification">
                        <field name="notes" nolabel="1" colspan="4" placeholder="Facultative"/>
                    </group>
                    <group string="Solde à La Demande" readonly="1">
                        <field name="holiday_line_ids" nolabel="1"
                               options="{'no_create': True, 'no_create_edit':True,'no_open':True}">
                            <tree delete="false">
                                <field name="name"/>
                                <field name="max_leave"/>
                                <field name="remaining_leave"/>
                            </tree>
                        </field>
                    </group>
                </sheet>

            </form>
        </field>
    </record>


    <record id="action_holidays" model="ir.actions.act_window">
        <field name="name">Historique des Congés</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hr.holidays</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
        <field name="domain">[('state','in',('accept','refuse'))]</field>
        <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('hr_holiday.view_holidays_tree')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('hr_holiday.view_holidays_form')})]"/>
    </record>

    <menuitem id="menu_holidays" name="Historique Congés" parent="project_custom.menu_gest_cong" sequence="30"
              action="action_holidays"/>

</odoo>