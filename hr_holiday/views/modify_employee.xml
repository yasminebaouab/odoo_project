<odoo>

    <record id="view_holidays_modify_employee_form" model="ir.ui.view">
        <field name="name">hr.holidays.modify.employee.form</field>
        <field name="model">hr.holidays</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="state" widget="statusbar" statusbar_visible="draft,pending"/>
                </header>
                <sheet>
                </sheet>
            </form>
        </field>
    </record>


    <record id="action_holidays_modify_employee" model="ir.actions.act_window">
        <field name="name">Modification Congé</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hr.holidays</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'default_type': 'modify'}</field>
        <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'form', 'view_id': ref('hr_holiday.view_holidays_modify_employee_form')})]"/>
    </record>

    <menuitem id="menu_holidays_modify_employee" name="Modification Congé" parent="project_custom.menu_cong"
              sequence="10"
              action="action_holidays_modify_employee"/>

</odoo>