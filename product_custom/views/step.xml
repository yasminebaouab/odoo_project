<odoo>
    <data>
        <record id="view_step_form" model="ir.ui.view">
            <field name="name">step.form</field>
            <field name="model">product.step</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group string="DonnÃ©es">
                            <group>
                                <field name="name" required="1"/>
                                <field name="is_divide"/>
                                <field name="kit_ids">
                                    <tree>
                                        <field name="id"/>
                                        <field name="name"/>
                                    </tree>
                                </field>
                            </group>
                            <group>
                                <field name="description"/>
                            </group>
                        </group>
                        <group name="inherit_step" string="Insertion dans Projets"/>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_step_tree" model="ir.ui.view">
            <field name="name">step.tree</field>
            <field name="model">product.step</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="id" string="ID"/>
                    <field name="name"/>
                    <field name="description"/>
                </tree>
            </field>
        </record>

        <record id="action_step" model="ir.actions.act_window">
            <field name="name">Liste des Etapes</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">product.step</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{}</field>
        </record>

    </data>
</odoo>