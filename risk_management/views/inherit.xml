<odoo>

    <record id="view_task_work_tree_inherit" model="ir.ui.view">
        <field name="name">task.work.tree.inherit</field>
        <field name="model">project.task.work</field>
        <field name="inherit_id" ref="task_work.view_task_work_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='paylist_id']" position="before">
                <field name="r_id" string="Risk" invisible="1"/>
            </xpath>
        </field>
    </record>

    <record id="view_project_kit_form_inherit" model="ir.ui.view">
        <field name="name">project.kit.form.inherit</field>
        <field name="model">project.project</field>
        <field name="inherit_id" ref="project_custom.view_custom_project_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='work_ids']/tree/field[@name='paylist_id']" position="after">
                <field name="r_id" string="Risk" invisible="1"/>
            </xpath>
        </field>
    </record>

    <record id="view_project_not_kit_form_inherit" model="ir.ui.view">
        <field name="name">project.not.kit.form.inherit</field>
        <field name="model">project.project</field>
        <field name="inherit_id" ref="project_custom.view_kit_false"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='work_ids']/tree/field[@name='paylist_id']" position="after">
                <field name="r_id" string="Risk" invisible="1"/>
            </xpath>
        </field>
    </record>

    <record id="base_task_merge_automatic_wizard_form_inherit" model="ir.ui.view">
        <field name="name">base.task.merge.automatic.wizard.form.inherit</field>
        <field name="model">base.task.merge.automatic.wizard</field>
        <field name="inherit_id" ref="eb_merge_task.base_task_merge_automatic_wizard_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='line_ids']/tree/field[@name='plans']" position="before">
                <field name="plan_id" string="Plan de"
                       attrs="{'invisible':[('aggr_ids','=','1')]}"
                       options="{'no_create': True, 'no_create_edit':True}"
                       invisible="1"/>
                <field name="plan_id2" string="Plan A"
                       attrs="{'invisible':[('aggr_ids','=','1')]}"
                       options="{'no_create': True, 'no_create_edit':True}"
                       invisible="1"/>
                <field name="risk_id" string="Plan RelevÃ©"
                       attrs="{'invisible':[('aggr_ids','=','1')]}"
                       options="{'no_create': True, 'no_create_edit':True}"/>
            </xpath>
        </field>
    </record>

</odoo>