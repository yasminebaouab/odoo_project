<odoo>
    <record id="view_employes_intervenant_search" model="ir.ui.view">
        <field name="name">employes.intervenant.search</field>
        <field name="model">intervenants.affect</field>
        <field name="arch" type="xml">
            <search string="Action">
                <field name="name" filter_domain="['|', ('name','ilike',self), ('type','ilike',self)]" string="Action"/>
                <field name="state" string="Etat"/>
                <filter name="production" string="Production" domain="[('types_affect', '=', 'intervenant')]"/>
                <filter name="controle" string="ContrÃ´le" domain="[('types_affect', '=', 'controle')]"/>
                <filter name="correction" string="Correction" domain="[('types_affect', '=', 'correction')]"/>
                <group expand="0" string="Group By">
                    <filter string="Type d'affectation" name="types_affect" domain="[]"
                            context="{'group_by':'types_affect'}"/>
                </group>

            </search>
        </field>
    </record>
    <record id="view_employes_intervenant" model="ir.ui.view">
        <field name="name">intervenants.affect.tree</field>
        <field name="model">intervenants.affect</field>
        <field name="arch" type="xml">
            <tree string="Groups" create="false" edit="false" delete="false"
            decoration-success="state =='termine'" decoration-info="state =='actif'"
                  decoration-warning="state =='en_cours'">

                <!--                <field name="name" string="Name employe"/>-->
                <field name="employee_id" string="Name employe" widget="many2one_avatar_employee"/>
                <field name="state" string="Etat"
                       decoration-success="state =='termine'"
                       decoration-info="state =='actif'"
                       decoration-warning="state =='en_cours'"
                       widget="badge"/>
                <field name="date_affectation" string="Date Affectation"/>
                <field name="date_declaration_bon" string="Date declaration de bon"/>
                <field name="task_work_id" string="Id TÃ¢che"/>
            </tree>


        </field>
    </record>


</odoo>