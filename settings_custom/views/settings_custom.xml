<odoo>

    <record id="view_settings_custom_from" model="ir.ui.view">
        <field name="name">settings.custom.form</field>
        <field name="model">settings.custom</field>
        <field name="arch" type="xml">
            <form string="Settings" edit="true" delete="false" create="false">
                <!--                <group>-->
                <!--                    <field name="affectation_multiple" string="Type d'affectation"/>-->
                <!--                </group>-->
                <h2>Type d'affectation</h2>
                <div class="col-12 col-lg-6 o_setting_box" id="manage_volume_uom_setting">
                    <div class="o_setting_right_pane">
                        <!--                        <label for="affectation_multiple" string="Volume"/>-->
                        <div class="text-muted">
                            Définir le type d'affectation
                        </div>
                        <div class="content-group">
                            <div class="mt16">
                                <field name="affectation_multiple" class="o_light_label" widget="radio"
                                       options="{'horizontal': true}" modifiers="{}"/>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </field>
    </record>

    <record id="action_settings_custom" model="ir.actions.act_window">
        <field name="name">Settings custom</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">settings.custom</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
        <field name="view_ids" eval="[(5, 0, 0),

                (0, 0, {'view_mode': 'form', 'view_id': ref('settings_custom.view_settings_custom_from')})]"/>
    </record>

    <menuitem id="menu_settings_custom" name="Table Paramètres" parent="project_custom.menu_conf" sequence="10"
              action="action_settings_custom"/>

</odoo>