<odoo>
        <record id="view_settings_custom" model="ir.ui.view">
            <field name="name">settings.custom.form</field>
            <field name="model">settings.custom</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="affectation_multiple" string="Type d'affectation"/>

                    </group>
                </form>
            </field>
        </record>

        <record id="view_settings_custom" model="ir.ui.view">
            <field name="name">settings.custom.tree</field>
            <field name="model">settings.custom</field>
            <field name="arch" type="xml">

                <field name="affectation_multiple" string="Type d'affectation"/>
                <field name="id" string="ID"/>
            </field>
        </record>

        <record id="action_settings_custom" model="ir.actions.act_window">
            <field name="name">Settings custom</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">settings.custom</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{}</field>
        </record>

</odoo>